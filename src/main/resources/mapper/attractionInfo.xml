<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ringdingdong.ridingthewind.attraction.mapper.AttractionInfoMapper">

    <resultMap type="attractionInfo" id="attractionInfo">
        <result column="content_id" property="contentId"/>
        <result column="content_type_id" property="contentTypeId"/>
        <result column="title" property="title"/>
        <result column="addr1" property="addr1"/>
        <result column="addr2" property="addr2"/>
        <result column="zipcode" property="zipcode"/>
        <result column="tel" property="tel"/>
        <result column="first_image" property="firstImage"/>
        <result column="sido_code" property="sidoCode"/>
        <result column="gugun_code" property="gugunCode"/>
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
    </resultMap>

    <resultMap type="sido" id="sido">
        <result column="sido_code" property="code"/>
        <result column="sido_name" property="name"/>
    </resultMap>

    <resultMap type="gugun" id="gugun">
        <result column="gugun_code" property="code"/>
        <result column="gugun_name" property="name"/>
    </resultMap>

    <select id="selectAttractionList" parameterType="map" resultMap="attractionInfo">
        select content_id, content_type_id, title, addr1, addr2, zipcode, tel, first_image, sido_code, gugun_code, latitude, longitude
        from attraction_info
        where sido_code = #{sido}
        and gugun_code = #{gugun}
        and title like CONCAT('%', #{title}, '%')
        and content_type_id in
        <foreach collection="contentTypeList" item="contentType" open="(" close=")" separator=",">
            #{contentType}
        </foreach>
    </select>

    <select id="selectAttractionListByUserId" parameterType="String" resultMap="attractionInfo">
        select *
        from attraction_info
        natural join personal_trip
        where userId = #{userId}
    </select>

    <insert id="insertMyAttraction" parameterType="map">
        insert (user_id, content_id) into `user`
		values (#{userId}, #{contentId})
    </insert>

    <select id="selectSidoList" resultMap="sido">
        select * from sido
    </select>

    <select id="selectGugunList" parameterType="int" resultMap="gugun">
        select gugun_code, gugun_name
        from gugun
        where sido_code = #{sido}
    </select>

</mapper>