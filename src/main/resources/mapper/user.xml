<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ringdingdong.ridingthewind.user.mapper.UserMapper">

    <resultMap id="user" type="user">
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_password" property="userPassword"/>
        <result column="email_id" property="emailId"/>
        <result column="email_domain" property="emailDomain"/>
        <result column="birth" property="birth"/>
        <result column="nickname" property="nickname"/>
        <result column="joindate" property="joindate"/>
        <result column="phone" property="phone"/>
        <result column="deleted" property="deleted"/>
    </resultMap>


    <select id="signinUser" parameterType="userDto" resultMap="user">
        select *
        from user
        where user_id=#{userId} and user_password=#{userPassword}
    </select>

    <insert id="signupUser" parameterType="userDto">
        insert into user values(#{userId},#{userName},#{userPassword},#{emailId},#{emailDomain},date(now()),#{nickname},date(now()),#{phone},0);
    </insert>

    <select id="searchUser" parameterType="string" resultMap="user">
        select *
        from user
        where user_id=#{userId}
    </select>

    <update id="updateUser" parameterType="userDto">
        update user
        set user_name=#{userName}, user_password=#{userPassword}, nickname=#{nickname}, phone=#{phone}
        where user_id=#{userId}
    </update>
</mapper>